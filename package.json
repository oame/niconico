{
  "name": "niconico",
  "description": "A nicovideo plug-in for NodeJS",
  "version": "1.2.0",
  "author": "Yasuaki Uechi <y@uechi.io>",
  "scripts": {
    "build": "shx rm -rf lib && tsc",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "docs": "yarn build && typedoc --mode file --out docs --excludeExternals --excludeNotExported --excludePrivate --exclude '**/__tests__/*' src && touch ./docs/.nojekyll",
    "format": "prettier '{examples,src,test}/**/*.{ts,js}' --write",
    "lint": "tslint --project ./tsconfig.json --fix",
    "test": "jest --coverage -i",
    "watch": "tsc -w"
  },
  "dependencies": {
    "axios": "^0.20.0",
    "axios-cookiejar-support": "^1.0.0",
    "file-type": "^14.7.1",
    "filenamify": "^4.1.0",
    "jest": "^26.4.2",
    "jsdom": "^16.4.0",
    "tough-cookie": "^4.0.0",
    "xml2js": "~0.4.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/jsdom": "^16.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.6.0",
    "@types/request-promise": "^4.1.44",
    "@types/xml2js": "^0.4.4",
    "coveralls": "^3.0.3",
    "husky": "^4.2.1",
    "jest-playback": "^3.0.0",
    "nock": "^13.0.4",
    "prettier": "^2.1.0",
    "pretty-quick": "^3.0.0",
    "shx": "^0.3.2",
    "ts-jest": "^26.2.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.18.0",
    "typescript": "^4.0.2"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "files": [
    "lib/*.js",
    "lib/*.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/uetchy/niconico.git"
  },
  "bugs": {
    "url": "https://github.com/uetchy/niconico/issues"
  },
  "homepage": "https://github.com/uetchy/niconico#readme",
  "keywords": [
    "niconico",
    "nicovideo"
  ],
  "license": "MIT"
}
